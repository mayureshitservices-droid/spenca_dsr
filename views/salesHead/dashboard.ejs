<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
            <div class="mb-12">
                <h1 class="text-4xl font-extrabold text-white flex items-center gap-4 tracking-tight drop-shadow-md">
                    <i class="bi bi-shield-lock text-indigo-400"></i>
                    Executive Control Panel
                </h1>
                <p class="mt-2 text-indigo-100 font-medium tracking-wide">Review, validate, and authorize field sales
                    operations.</p>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl p-8 shadow-xl border border-white/20 group transition-all hover:-translate-y-1">
                    <div class="flex items-center justify-between mb-4">
                        <div
                            class="p-4 bg-amber-50 rounded-2xl text-amber-600 group-hover:bg-amber-100 transition-colors">
                            <i class="bi bi-clock-history text-3xl"></i>
                        </div>
                        <span class="text-[10px] font-black text-amber-500 uppercase tracking-widest">Awaiting
                            Review</span>
                    </div>
                    <h3 class="text-4xl font-black text-gray-900 mb-1 tabular-nums">
                        <%= stats.totalPending %>
                    </h3>
                    <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Pending Orders</p>
                </div>

                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl p-8 shadow-xl border border-white/20 group transition-all hover:-translate-y-1">
                    <div class="flex items-center justify-between mb-4">
                        <div
                            class="p-4 bg-emerald-50 rounded-2xl text-emerald-600 group-hover:bg-emerald-100 transition-colors">
                            <i class="bi bi-check-circle-fill text-3xl"></i>
                        </div>
                        <span
                            class="text-[10px] font-black text-emerald-500 uppercase tracking-widest">Authorized</span>
                    </div>
                    <h3 class="text-4xl font-black text-gray-900 mb-1 tabular-nums">
                        <%= stats.totalApproved %>
                    </h3>
                    <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Approved Cycle</p>
                </div>

                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl p-8 shadow-xl border border-white/20 group transition-all hover:-translate-y-1">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-4 bg-red-50 rounded-2xl text-red-600 group-hover:bg-red-100 transition-colors">
                            <i class="bi bi-x-circle-fill text-3xl"></i>
                        </div>
                        <span class="text-[10px] font-black text-red-500 uppercase tracking-widest">Declined</span>
                    </div>
                    <h3 class="text-4xl font-black text-gray-900 mb-1 tabular-nums">
                        <%= stats.totalRejected %>
                    </h3>
                    <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Rejected / Flagged</p>
                </div>
            </div>

            <!-- Pending Orders Section -->
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
                    <i class="bi bi-list-stars text-indigo-400"></i>
                    Approval Queue
                </h2>

                <% if (orders.length===0) { %>
                    <div
                        class="bg-white/10 backdrop-blur-sm rounded-3xl p-20 text-center border-2 border-dashed border-white/20">
                        <i class="bi bi-check2-all text-6xl text-white/30 mb-4 block"></i>
                        <p class="text-indigo-100 text-lg font-medium italic">Zero pending items. Your queue is clear!
                        </p>
                    </div>
                    <% } else { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <% orders.forEach(function(order) { %>
                                <div class="bg-white/95 backdrop-blur-md rounded-3xl shadow-xl overflow-hidden border border-white/20 flex flex-col h-full group transition-all hover:shadow-2xl"
                                    id="order_<%= order._id %>">
                                    <div class="p-8">
                                        <div class="flex justify-between items-start mb-6">
                                            <div>
                                                <h3
                                                    class="text-2xl font-black text-gray-900 leading-tight group-hover:text-indigo-600 transition-colors">
                                                    <%= order.customerName %>
                                                </h3>
                                                <div class="flex items-center gap-2 mt-2">
                                                    <div
                                                        class="w-8 h-8 rounded-full bg-indigo-50 border border-indigo-100 flex items-center justify-center text-indigo-600 font-black text-[10px]">
                                                        <%= order.salespersonId.fullName.charAt(0) %>
                                                    </div>
                                                    <span
                                                        class="text-xs font-bold text-gray-500 uppercase tracking-widest">
                                                        <%= order.salespersonId.fullName %>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="text-right">
                                                <span
                                                    class="px-3 py-1 <%= order.orderStatus === 'Ordered' ? 'bg-emerald-100 text-emerald-700' : 'bg-gray-100 text-gray-500' %> text-[10px] font-black uppercase tracking-widest rounded-lg shadow-sm">
                                                    <%= order.orderStatus %>
                                                </span>
                                                <div class="text-[10px] font-bold text-gray-400 mt-2 tabular-nums">
                                                    <%= new Date(order.createdAt).toLocaleDateString('en-IN', {
                                                        day: '2-digit' , month: 'short' }) %>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="space-y-4 mb-8">
                                            <label
                                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest">Requested
                                                Inventory</label>
                                            <div class="flex flex-wrap gap-2">
                                                <% if (order.products && order.products.length> 0) { %>
                                                    <% order.products.forEach(function(product) { %>
                                                        <div
                                                            class="px-4 py-2 bg-gray-50 rounded-xl border border-gray-100 flex items-center gap-2">
                                                            <span class="text-xs font-black text-gray-700">
                                                                <%= product.productName %>
                                                            </span>
                                                            <span
                                                                class="text-[10px] font-black text-indigo-500 bg-indigo-50 px-2 py-0.5 rounded">x
                                                                <%= product.quantity %></span>
                                                        </div>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <span class="text-xs font-bold text-gray-400 italic">No
                                                                    inventory items listed.</span>
                                                                <% } %>
                                            </div>
                                        </div>

                                        <div class="grid grid-cols-3 gap-3">
                                            <a href="https://www.google.com/maps?q=<%= order.gpsLocation.latitude %>,<%= order.gpsLocation.longitude %>"
                                                target="_blank"
                                                class="flex items-center justify-center gap-2 py-3.5 bg-gray-50 hover:bg-indigo-50 text-indigo-600 rounded-2xl transition-all border border-transparent hover:border-indigo-100 font-black text-[10px] uppercase tracking-widest">
                                                <i class="bi bi-geo-alt-fill text-sm"></i> GPS
                                            </a>
                                            <button onclick="approveOrder('<%= order._id %>')"
                                                class="flex items-center justify-center gap-2 py-3.5 bg-emerald-600 hover:bg-emerald-500 text-white rounded-2xl transition-all shadow-lg shadow-emerald-500/20 font-black text-[10px] uppercase tracking-widest active:scale-95">
                                                <i class="bi bi-check-lg text-sm"></i> Approve
                                            </button>
                                            <button onclick="rejectOrder('<%= order._id %>')"
                                                class="flex items-center justify-center gap-2 py-3.5 bg-red-600 hover:bg-red-500 text-white rounded-2xl transition-all shadow-lg shadow-red-500/20 font-black text-[10px] uppercase tracking-widest active:scale-95">
                                                <i class="bi bi-x-lg text-sm"></i> Reject
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                        <% } %>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>

                <script>
                    function approveOrder(orderId) {
                        if (!confirm('Are you sure you want to approve this order?')) return;

                        fetch(`/sales-head/orders/${orderId}/approve`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' }
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    document.getElementById(`order_${orderId}`).remove();
                                    location.reload();
                                } else {
                                    alert('Failed to approve order');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                alert('An error occurred');
                            });
                    }

                    function rejectOrder(orderId) {
                        if (!confirm('Are you sure you want to reject this order?')) return;

                        fetch(`/sales-head/orders/${orderId}/reject`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' }
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    document.getElementById(`order_${orderId}`).remove();
                                    location.reload();
                                } else {
                                    alert('Failed to reject order');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                alert('An error occurred');
                            });
                    }
                </script>