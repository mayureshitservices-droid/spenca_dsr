<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
            <div class="mb-12">
                <h1 class="text-4xl font-extrabold text-gray-900 flex items-center gap-4 tracking-tight">

                    Pending Approval
                </h1>
                <p class="mt-2 text-gray-600 font-medium">Review and authorize pending sales orders from the field.
                </p>
            </div>

            <!-- Pending Orders Section -->
            <div class="mb-8">
                <% if (orders.length===0) { %>
                    <div
                        class="bg-white/10 backdrop-blur-sm rounded-3xl p-20 text-center border-2 border-dashed border-white/20">
                        <i data-lucide="check-check" class="w-12 h-12 text-white/30 mb-4 block mx-auto"></i>
                        <p class="text-gray-500 text-lg font-medium italic">Zero pending items. Your queue is clear!
                        </p>
                    </div>
                    <% } else { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <% orders.forEach(function(order) { %>
                                <div class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg overflow-hidden border border-white/20 flex flex-col h-full group transition-all hover:shadow-2xl"
                                    id="order_<%= order._id %>">
                                    <div class="p-8">
                                        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                                            <!-- Left Content: Details -->
                                            <div class="md:col-span-3">
                                                <div class="flex justify-between items-start mb-6">
                                                    <div>
                                                        <h3
                                                            class="text-2xl font-black text-gray-900 leading-tight group-hover:text-indigo-600 transition-colors">
                                                            <%= order.customerName %>
                                                        </h3>
                                                        <% if (order.mobileNo) { %>
                                                            <p
                                                                class="text-sm font-bold text-gray-400 flex items-center gap-1.5 mt-1">
                                                                <i data-lucide="phone" class="w-3 h-3"></i>
                                                                <%= order.mobileNo %>
                                                            </p>
                                                            <% } %>
                                                                <div class="flex items-center gap-2 mt-3">
                                                                    <div
                                                                        class="w-8 h-8 rounded-full bg-indigo-50 border border-indigo-100 flex items-center justify-center text-indigo-600 font-black text-[10px]">
                                                                        <%= order.salespersonId.fullName.charAt(0) %>
                                                                    </div>
                                                                    <span
                                                                        class="text-xs font-bold text-gray-500 uppercase tracking-widest">
                                                                        <%= order.salespersonId.fullName %>
                                                                    </span>
                                                                </div>
                                                    </div>
                                                    <div class="text-right">
                                                        <span
                                                            class="px-3 py-1 <%= order.orderStatus === 'Ordered' ? 'bg-emerald-100 text-emerald-700' : 'bg-gray-100 text-gray-500' %> text-[10px] font-black uppercase tracking-widest rounded-lg shadow-sm">
                                                            <%= order.orderStatus %>
                                                        </span>
                                                        <div
                                                            class="text-[10px] font-bold text-gray-400 mt-2 tabular-nums">
                                                            <%= new Date(order.createdAt).toLocaleDateString('en-IN', {
                                                                day: '2-digit' , month: 'short' }) %>
                                                        </div>
                                                        <% if (order.tentativeRepeatDate) { %>
                                                            <div
                                                                class="mt-2 text-[9px] font-black text-amber-600 bg-amber-50 px-2 py-1 rounded inline-block uppercase tracking-widest">
                                                                Repeat: <%= new
                                                                    Date(order.tentativeRepeatDate).toLocaleDateString('en-IN',
                                                                    { day: '2-digit' , month: 'short' }) %>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                </div>

                                                <div class="mb-8">
                                                    <div class="flex flex-wrap gap-2">
                                                        <% order.products.forEach(function(product) { %>
                                                            <div
                                                                class="px-4 py-2 bg-gray-50 rounded-xl border border-gray-100 flex items-center gap-2">
                                                                <span class="text-xs font-black text-gray-700">
                                                                    <%= product.productName %>
                                                                </span>
                                                                <span
                                                                    class="text-[10px] font-black text-indigo-500 bg-indigo-50 px-2 py-0.5 rounded">x
                                                                    <%= product.quantity %>
                                                                </span>
                                                            </div>
                                                            <% }); %>
                                                    </div>
                                                </div>

                                                <% if (order.remark) { %>
                                                    <div
                                                        class="mb-0 p-4 bg-amber-50 rounded-2xl border-l-4 border-amber-400">
                                                        <span
                                                            class="block text-[10px] font-black text-amber-600 uppercase tracking-widest mb-1">Executive
                                                            Remarks</span>
                                                        <p class="text-sm font-medium text-gray-700 italic">"<%=
                                                                order.remark %>
                                                                "</p>
                                                    </div>
                                                    <% } %>
                                            </div>

                                            <!-- Right Content: Buttons -->
                                            <div class="md:col-span-1 flex flex-col justify-center">
                                                <div class="flex flex-col gap-3">
                                                    <button onclick="approveOrder('<%= order._id %>')"
                                                        class="w-full flex items-center justify-center gap-3 py-2 bg-emerald-50 hover:bg-emerald-100 text-emerald-700 rounded-2xl transition-all shadow-sm border border-emerald-200 font-black text-[10px] uppercase tracking-widest active:scale-95 transform hover:-translate-y-0.5">
                                                        <i data-lucide="check-circle" class="w-5 h-5"></i> Approve Order
                                                    </button>
                                                    <button onclick="rejectOrder('<%= order._id %>')"
                                                        class="w-full flex items-center justify-center gap-3 py-2 bg-red-50 hover:bg-red-100 text-red-700 rounded-2xl transition-all shadow-sm border border-red-200 font-black text-[10px] uppercase tracking-widest active:scale-95 transform hover:-translate-y-0.5">
                                                        <i data-lucide="x-circle" class="w-5 h-5"></i> Reject Order
                                                    </button>
                                                    <a href="https://www.google.com/maps?q=<%= order.gpsLocation.latitude %>,<%= order.gpsLocation.longitude %>"
                                                        target="_blank"
                                                        class="w-full flex items-center justify-center gap-3 py-2 bg-white hover:bg-gray-50 text-gray-700 rounded-2xl transition-all border-2 border-gray-200 hover:border-indigo-300 font-bold text-[10px] uppercase tracking-widest group">
                                                        <i data-lucide="map-pin"
                                                            class="w-4 h-4 group-hover:text-indigo-600 transition-colors"></i>
                                                        <span class="group-hover:text-indigo-600 transition-colors">View
                                                            GPS Location</span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <% }); %>
                        </div>
                        <% } %>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>

                <script>
                    function approveOrder(orderId) {
                        if (!confirm('Are you sure you want to approve this order?')) return;

                        fetch(`/sales-head/orders/${orderId}/approve`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' }
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    location.reload();
                                } else {
                                    alert('Failed to approve order');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                alert('An error occurred');
                            });
                    }

                    function rejectOrder(orderId) {
                        if (!confirm('Are you sure you want to reject this order?')) return;

                        fetch(`/sales-head/orders/${orderId}/reject`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' }
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    location.reload();
                                } else {
                                    alert('Failed to reject order');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                alert('An error occurred');
                            });
                    }
                </script>