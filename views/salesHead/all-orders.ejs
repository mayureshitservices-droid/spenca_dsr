<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
            <div class="mb-12">
                <h1 class="text-4xl font-extrabold text-gray-900 flex items-center gap-4 tracking-tight">
                    <i data-lucide="list-checks" class="w-8 h-8 text-indigo-400"></i>
                    All Orders
                </h1>
                <p class="mt-2 text-gray-600 font-medium">Complete administrative log of all processed and pending
                    field orders.</p>
            </div>

            <!-- All Orders Section -->
            <div class="mb-8">
                <% if (orders.length===0) { %>
                    <div
                        class="bg-white/10 backdrop-blur-sm rounded-3xl p-20 text-center border-2 border-dashed border-white/20">
                        <i data-lucide="inbox" class="w-12 h-12 text-indigo-100 mb-4 block mx-auto"></i>
                        <p class="text-gray-500 text-lg font-medium italic">No orders found in the system.</p>
                    </div>
                    <% } else { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <% orders.forEach(function(order) { %>
                                <div
                                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg overflow-hidden border border-white/20 flex flex-col h-full group transition-all hover:shadow-2xl">
                                    <!-- Card Header -->
                                    <div class="p-8">
                                        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                                            <!-- Left Content: Details -->
                                            <div class="md:col-span-3">
                                                <div class="flex justify-between items-start mb-6">
                                                    <div>
                                                        <h3
                                                            class="text-2xl font-black text-gray-900 leading-tight group-hover:text-indigo-600 transition-colors">
                                                            <%= order.customerName %>
                                                        </h3>
                                                        <% if (order.mobileNo) { %>
                                                            <p
                                                                class="text-sm font-bold text-gray-400 flex items-center gap-1.5 mt-1">
                                                                <i data-lucide="phone"
                                                                    class="w-3 h-3 text-gray-400"></i>
                                                                <%= order.mobileNo %>
                                                            </p>
                                                            <% } %>
                                                                <div class="flex items-center gap-2 mt-3">
                                                                    <div
                                                                        class="w-8 h-8 rounded-lg bg-indigo-50 border border-indigo-100 flex items-center justify-center text-indigo-600 font-black text-[10px]">
                                                                        <%= order.salespersonId.fullName.charAt(0) %>
                                                                    </div>
                                                                    <span
                                                                        class="text-xs font-bold text-gray-500 uppercase tracking-widest">
                                                                        <%= order.salespersonId.fullName %>
                                                                    </span>
                                                                </div>
                                                    </div>
                                                    <div class="text-right">
                                                        <span
                                                            class="px-3 py-1 <%= order.approvalStatus === 'pending' ? 'bg-amber-100 text-amber-700' : 
                                                               order.approvalStatus === 'approved' ? 'bg-emerald-100 text-emerald-700' : 
                                                               'bg-red-100 text-red-700' %> text-[10px] font-black uppercase tracking-widest rounded-lg shadow-sm">
                                                            <%= order.approvalStatus %>
                                                        </span>
                                                        <div
                                                            class="text-[10px] font-bold text-gray-400 mt-2 tabular-nums">
                                                            <%= new Date(order.createdAt).toLocaleDateString('en-IN', {
                                                                day: '2-digit' , month: 'short' }) %>
                                                        </div>
                                                        <% if (order.tentativeRepeatDate) { %>
                                                            <div
                                                                class="mt-2 text-[9px] font-black text-amber-600 bg-amber-50 px-2 py-1 rounded inline-block uppercase tracking-widest">
                                                                Repeat: <%= new
                                                                    Date(order.tentativeRepeatDate).toLocaleDateString('en-IN',
                                                                    { day: '2-digit' , month: 'short' }) %>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                </div>

                                                <div class="space-y-3 mb-8">
                                                    <div class="flex flex-col gap-2">
                                                        <span
                                                            class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Products</span>
                                                        <div class="flex flex-wrap gap-2">
                                                            <% order.products.forEach(function(product) { %>
                                                                <span
                                                                    class="px-2 py-1 bg-gray-50 border border-gray-100 rounded-lg text-[10px] font-bold text-gray-700">
                                                                    <%= product.productName %> <span
                                                                            class="text-indigo-600 ml-1">x<%=
                                                                                product.quantity %></span>
                                                                </span>
                                                                <% }); %>
                                                        </div>
                                                    </div>

                                                    <% if (order.remark) { %>
                                                        <div
                                                            class="p-4 bg-amber-50 rounded-2xl border-l-4 border-amber-400">
                                                            <span
                                                                class="block text-[10px] font-black text-amber-600 uppercase tracking-widest mb-1">Executive
                                                                Remarks</span>
                                                            <p class="text-sm font-medium text-gray-700 italic">"<%=
                                                                    order.remark %>"</p>
                                                        </div>
                                                        <% } %>

                                                            <div class="flex justify-between items-center pt-2">
                                                                <span
                                                                    class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Order
                                                                    Status</span>
                                                                <span
                                                                    class="px-2 py-0.5 <%= order.orderStatus === 'Ordered' ? 'bg-emerald-50 text-emerald-600 border border-emerald-100' : 'bg-gray-50 text-gray-500 border border-gray-100' %> text-[9px] font-black uppercase tracking-widest rounded">
                                                                    <%= order.orderStatus %>
                                                                </span>
                                                            </div>
                                                </div>
                                            </div>

                                            <!-- Right Content: Actions & Metadata -->
                                            <div
                                                class="md:col-span-1 flex flex-col justify-end border-t md:border-t-0 md:border-l border-gray-100 md:pl-6 pt-6 md:pt-0">
                                                <div class="flex flex-col gap-4 mt-auto">
                                                    <a href="https://www.google.com/maps?q=<%= order.gpsLocation.latitude %>,<%= order.gpsLocation.longitude %>"
                                                        target="_blank"
                                                        class="w-full flex items-center justify-center gap-3 py-2 bg-white hover:bg-gray-50 text-gray-700 rounded-2xl transition-all border-2 border-gray-200 hover:border-indigo-300 font-bold text-[10px] uppercase tracking-widest group">
                                                        <i data-lucide="map-pin"
                                                            class="w-4 h-4 group-hover:text-indigo-600 transition-colors"></i>
                                                        <span class="group-hover:text-indigo-600 transition-colors">View
                                                            GPS</span>
                                                    </a>
                                                    <div class="text-[9px] font-bold text-gray-300 italic text-center">
                                                        REF: <%= order._id.toString().slice(-8).toUpperCase() %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                        <% } %>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>