<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6 mb-12">
                <button onclick="openModal()"
                    class="inline-flex items-center gap-3 py-4 px-8 bg-indigo-600 hover:bg-indigo-500 text-white font-bold rounded-2xl transition-all transform hover:scale-105 shadow-lg shadow-indigo-600/30">
                    <i data-lucide="plus-circle" class="w-5 h-5"></i>
                    Add New Product
                </button>
            </div>

            <!-- Alerts -->
            <% if (typeof success !=='undefined' && success) { %>
                <div
                    class="mb-8 p-4 bg-emerald-500/10 border-l-4 border-emerald-500 text-emerald-100 flex items-center justify-between gap-3 rounded-r-xl backdrop-blur-md">
                    <div class="flex items-center gap-3">
                        <i data-lucide="check-circle-2" class="w-5 h-5 text-emerald-500"></i>
                        <p class="font-bold">
                            <%= success %>
                        </p>
                    </div>
                    <button onclick="this.parentElement.remove()" class="text-emerald-500 hover:text-emerald-400">
                        <i data-lucide="x" class="w-4 h-4"></i>
                    </button>
                </div>
                <% } %>

                    <% if (typeof error !=='undefined' && error) { %>
                        <div
                            class="mb-8 p-4 bg-red-500/10 border-l-4 border-red-500 text-red-100 flex items-center justify-between gap-3 rounded-r-xl backdrop-blur-md">
                            <div class="flex items-center gap-3">
                                <i data-lucide="alert-triangle" class="w-5 h-5 text-red-500"></i>
                                <p class="font-bold">
                                    <%= error %>
                                </p>
                            </div>
                            <button onclick="this.parentElement.remove()" class="text-red-500 hover:text-red-400">
                                <i data-lucide="x" class="w-4 h-4"></i>
                            </button>
                        </div>
                        <% } %>

                            <!-- Products Grid -->
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                                <% products.forEach(function(p) { %>
                                    <div
                                        class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg overflow-hidden border border-white/20 transition-all hover:shadow-2xl hover:-translate-y-2 group flex flex-col h-full">
                                        <div class="relative h-56 overflow-hidden">
                                            <% if (p.photo) { %>
                                                <img src="<%= p.photo %>"
                                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                                    alt="<%= p.productName %>">
                                                <% } else { %>
                                                    <div
                                                        class="w-full h-full bg-gray-100 flex items-center justify-center text-gray-300">
                                                        <i data-lucide="image" class="w-12 h-12 text-gray-300"></i>
                                                    </div>
                                                    <% } %>
                                                        <div
                                                            class="absolute top-4 right-4 bg-white/90 backdrop-blur shadow-lg px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest text-indigo-600">
                                                            <%= p.gstPercent %>% GST
                                                        </div>
                                        </div>

                                        <div class="p-6 flex flex-col flex-grow">
                                            <h5
                                                class="text-xl font-black text-gray-900 mb-2 leading-tight tracking-tight">
                                                <%= p.productName %>
                                            </h5>
                                            <% if (p.packaging) { %>
                                                <div
                                                    class="flex items-center gap-2 text-sm font-bold text-gray-500 mb-4">
                                                    <i data-lucide="package" class="w-4 h-4 text-indigo-500"></i>
                                                    <%= p.packaging %>
                                                </div>
                                                <% } %>

                                                    <% if (p.remarks) { %>
                                                        <p
                                                            class="text-xs font-medium text-gray-400 mb-6 italic line-clamp-2">
                                                            "<%= p.remarks %>"</p>
                                                        <% } %>

                                                            <div
                                                                class="mt-auto pt-6 border-t border-gray-100 flex items-center justify-between">
                                                                <button onclick="deleteProduct('<%= p._id %>')"
                                                                    class="inline-flex items-center gap-2 text-sm font-black text-red-500 hover:text-red-700 transition-colors uppercase tracking-widest px-2 py-1 hover:bg-red-50 rounded-lg">
                                                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                                                    Delete
                                                                </button>
                                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
        </div>

        <!-- Create Product Modal -->
        <div id="createProductModal" class="fixed inset-0 z-[2000] hidden items-center justify-center p-4">
            <div onclick="closeModal()" class="absolute inset-0 bg-gray-900/80 backdrop-blur-md"></div>
            <div
                class="relative w-full max-w-2xl bg-white rounded-3xl shadow-around-lg overflow-hidden transform transition-all animate-in fade-in zoom-in duration-300">
                <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-8 py-6 flex items-center justify-between">
                    <h2 class="text-2xl font-black text-white flex items-center gap-3 tracking-tight">
                        <i data-lucide="package" class="w-8 h-8"></i>
                        Catalog New Item
                    </h2>
                    <button onclick="closeModal()" class="text-white/80 hover:text-white transition-colors">
                        <i data-lucide="x" class="w-6 h-6"></i>
                    </button>
                </div>

                <form action="/sysadmin/products/create" method="POST" enctype="multipart/form-data" class="p-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                        <div class="space-y-2">
                            <label class="block text-xs font-black text-gray-500 uppercase tracking-widest">Formal
                                Product Name</label>
                            <input type="text" name="productName" required
                                class="w-full px-5 py-3.5 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 transition-all outline-none font-bold text-gray-900"
                                placeholder="Premium Detergent 5kg">
                        </div>
                        <div class="space-y-2">
                            <label class="block text-xs font-black text-gray-500 uppercase tracking-widest">Packaging
                                Dimension/Unit</label>
                            <input type="text" name="packaging"
                                class="w-full px-5 py-3.5 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 transition-all outline-none font-bold text-gray-900"
                                placeholder="12 Units x 1kg Carton">
                        </div>
                        <div class="space-y-2">
                            <label class="block text-xs font-black text-gray-500 uppercase tracking-widest">GST
                                Percentage (%)</label>
                            <input type="number" name="gstPercent" min="0" max="100" step="0.01"
                                class="w-full px-5 py-3.5 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 transition-all outline-none font-bold text-gray-900"
                                placeholder="18.00">
                        </div>
                        <div class="space-y-2">
                            <label class="block text-xs font-black text-gray-500 uppercase tracking-widest">Visual
                                Identity (Photo)</label>
                            <div class="relative">
                                <input type="file" name="photo" accept="image/*"
                                    class="w-full px-5 py-3 bg-gray-50 border-2 border-dashed border-gray-200 rounded-2xl focus:bg-white focus:border-indigo-500 transition-all outline-none font-bold text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-black file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                            </div>
                        </div>
                        <div class="col-span-1 md:col-span-2 space-y-2">
                            <label class="block text-xs font-black text-gray-500 uppercase tracking-widest">Additional
                                Technical Remarks</label>
                            <textarea name="remarks" rows="3"
                                class="w-full px-5 py-3.5 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 transition-all outline-none font-bold text-gray-900"
                                placeholder="Internal product notes, barcode info, etc."></textarea>
                        </div>
                    </div>

                    <div class="flex items-center justify-end gap-4 border-t border-gray-100 pt-8">
                        <button type="button" onclick="closeModal()"
                            class="px-8 py-4 text-gray-500 font-bold hover:text-gray-900 transition-colors">Discard</button>
                        <button type="submit"
                            class="px-10 py-4 bg-purple-600 hover:bg-purple-700 text-white font-bold rounded-2xl shadow-xl shadow-purple-600/20 transition-all transform active:scale-95 leading-none">
                            Catalog Product
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>

                <script>
                    function openModal() {
                        const modal = document.getElementById('createProductModal');
                        modal.classList.remove('hidden');
                        modal.classList.add('flex');
                        document.body.style.overflow = 'hidden';
                    }

                    function closeModal() {
                        const modal = document.getElementById('createProductModal');
                        modal.classList.remove('flex');
                        modal.classList.add('hidden');
                        document.body.style.overflow = '';
                    }

                    function deleteProduct(productId) {
                        if (!confirm('Are you sure you want to delete this product?')) return;

                        fetch(`/sysadmin/products/${productId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    location.reload();
                                } else {
                                    alert('Failed to delete product');
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                alert('An error occurred');
                            });
                    }
                </script>