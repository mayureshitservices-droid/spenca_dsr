<% if (typeof user !=='undefined' && user) { %>
    <!-- Top Navigation Bar -->
    <nav class="bg-primary-600 pt-6 pb-20 sticky top-0 z-50 rounded-b-[40px] shadow-sm">
        <div class="max-w-7xl mx-auto px-6">
            <div class="flex justify-between items-start">
                <!-- Branding / Title -->
                <div class="flex flex-col">
                    <a href="/" class="flex items-center gap-2 group">
                        <h1 class="text-3xl font-black text-white tracking-tight uppercase"
                            style="font-family: 'Inter', sans-serif;">SPENCA</h1>
                    </a>
                    <span class="text-[10px] font-bold tracking-[0.2em] text-white/60 uppercase mt-1 ml-1">Mineral
                        Water</span>
                </div>

                <!-- User Profile / Actions -->
                <div class="flex items-center gap-4">
                    <div class="hidden sm:flex items-center gap-3 bg-white/10 px-4 py-2 rounded-2xl backdrop-blur-sm">
                        <div class="flex flex-col items-end">
                            <span class="text-xs font-black text-white">
                                <%= user.name %>
                            </span>
                            <span class="text-[10px] font-bold text-white/60 uppercase tracking-wider">
                                <%= userRole %>
                            </span>
                        </div>
                        <div
                            class="w-8 h-8 rounded-full bg-white text-primary-900 flex items-center justify-center font-bold text-sm">
                            <%= user.name.charAt(0) %>
                        </div>
                    </div>

                    <a href="/logout"
                        class="p-2 bg-white/10 hover:bg-white text-white hover:text-primary-900 rounded-xl transition-all duration-300">
                        <i data-lucide="log-out" class="w-5 h-5"></i>
                    </a>
                </div>
            </div>

            <!-- Pattern/Decoration overlay (Optional, using CSS to simulate the pattern in the image) -->
            <div class="absolute bottom-0 left-0 w-full h-8 flex justify-center gap-2 opacity-10">
                <!-- Decorative elements could go here -->
            </div>
        </div>
    </nav>
    <% } %>