<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">


            <!-- Recent Activity Section -->
            <div class="mb-12">
                <h3 class="text-xl font-black text-white mb-6 flex items-center gap-3">
                    <i data-lucide="history" class="w-6 h-6 text-amber-400"></i>
                    Recent System Activity
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% orders.forEach(function(order) { %>
                        <div
                            class="bg-white/95 backdrop-blur-md rounded-3xl p-6 shadow-around-lg border border-white/20 group transition-all hover:shadow-2xl">
                            <div class="flex justify-between items-start mb-4">
                                <div class="flex flex-col">
                                    <h4 class="text-lg font-black text-gray-900 leading-tight">
                                        <%= order.customerName %>
                                    </h4>
                                    <span class="text-[10px] font-bold text-gray-400 uppercase tracking-widest mt-1">
                                        <%= order.salespersonId.fullName %>
                                    </span>
                                </div>
                                <span
                                    class="px-2 py-0.5 bg-emerald-50 text-emerald-600 border border-emerald-100 text-[9px] font-black uppercase tracking-widest rounded">
                                    <%= order.orderStatus %>
                                </span>
                            </div>

                            <% if (order.tentativeRepeatDate) { %>
                                <div
                                    class="mt-4 p-3 bg-amber-50 rounded-xl border border-amber-100 flex items-center justify-between">
                                    <span class="text-[10px] font-black text-amber-700 uppercase tracking-widest">Repeat
                                        Order</span>
                                    <span class="text-xs font-bold text-amber-900">
                                        <%= new Date(order.tentativeRepeatDate).toLocaleDateString('en-IN', {
                                            day: '2-digit' , month: 'short' }) %>
                                    </span>
                                </div>
                                <% } %>
                        </div>
                        <% }); %>
                </div>
            </div>

            <!-- Charts Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
                <!-- Total Orders Chart -->
                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg border border-white/20 overflow-hidden transition-all hover:shadow-2xl">
                    <div class="px-8 py-5 border-b border-gray-100 flex items-center justify-between bg-gray-50/50">
                        <h3 class="text-sm font-black text-gray-900 uppercase tracking-widest flex items-center gap-2">
                            <i data-lucide="pie-chart" class="w-4 h-4 text-indigo-500"></i>
                            Order Distribution
                        </h3>
                    </div>
                    <div class="p-8">
                        <div class="relative h-80">
                            <canvas id="totalOrdersChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Total Sales Chart -->
                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg border border-white/20 overflow-hidden transition-all hover:shadow-2xl">
                    <div class="px-8 py-5 border-b border-gray-100 flex items-center justify-between bg-gray-50/50">
                        <h3 class="text-sm font-black text-gray-900 uppercase tracking-widest flex items-center gap-2">
                            <i data-lucide="bar-chart-3" class="w-4 h-4 text-purple-500"></i>
                            Revenue Volume
                        </h3>
                    </div>
                    <div class="p-8">
                        <div class="relative h-80">
                            <canvas id="totalSalesChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Salesperson Sales Chart -->
                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg border border-white/20 overflow-hidden transition-all hover:shadow-2xl">
                    <div class="px-8 py-5 border-b border-gray-100 flex items-center justify-between bg-gray-50/50">
                        <h3 class="text-sm font-black text-gray-900 uppercase tracking-widest flex items-center gap-2">
                            <i data-lucide="users" class="w-4 h-4 text-emerald-500"></i>
                            Personnel Performance
                        </h3>
                    </div>
                    <div class="p-8">
                        <div class="relative h-80">
                            <canvas id="salespersonSalesChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Date-wise Trends Chart -->
                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg border border-white/20 overflow-hidden transition-all hover:shadow-2xl">
                    <div class="px-8 py-5 border-b border-gray-100 flex items-center justify-between bg-gray-50/50">
                        <h3 class="text-sm font-black text-gray-900 uppercase tracking-widest flex items-center gap-2">
                            <i data-lucide="activity" class="w-4 h-4 text-red-500"></i>
                            Temporal Trends
                        </h3>
                    </div>
                    <div class="p-8">
                        <div class="relative h-80">
                            <canvas id="dateWiseSalesChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>

                <script src="/js/charts.js"></script>