<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
            <div class="mb-12">
                <h1 class="text-4xl font-extrabold text-white flex items-center gap-4 tracking-tight drop-shadow-md">
                    <i data-lucide="bar-chart-2" class="w-8 h-8 text-indigo-400"></i>
                    Business Reports
                </h1>
                <p class="mt-2 text-indigo-100 font-medium">Deep dive into organizational performance, field activity,
                    and transaction dynamics.</p>
            </div>

            <!-- Reports Placeholder -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Data Export Card -->
                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl p-8 shadow-around-lg border border-white/20 flex flex-col items-center text-center group transition-all hover:-translate-y-2">
                    <div
                        class="w-20 h-20 bg-indigo-50 rounded-2xl flex items-center justify-center text-indigo-600 mb-6 group-hover:scale-110 transition-transform">
                        <i data-lucide="download" class="w-10 h-10 text-indigo-600"></i>
                    </div>
                    <h3 class="text-xl font-black text-gray-900 mb-2">Transaction Export</h3>
                    <p class="text-sm font-medium text-gray-500 mb-8 items-center justify-center">Detailed CSV/Excel
                        export of all authorized orders for accounting and fulfillment.</p>
                    <button
                        class="mt-auto w-full py-4 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-2xl transition-all shadow-lg shadow-indigo-600/20 active:scale-95">
                        Download Report
                    </button>
                </div>

                <!-- Salesperson Performance Card -->
                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl p-8 shadow-around-lg border border-white/20 flex flex-col items-center text-center group transition-all hover:-translate-y-2">
                    <div
                        class="w-20 h-20 bg-emerald-50 rounded-2xl flex items-center justify-center text-emerald-600 mb-6 group-hover:scale-110 transition-transform">
                        <i data-lucide="user-check" class="w-10 h-10 text-emerald-600"></i>
                    </div>
                    <h3 class="text-xl font-black text-gray-900 mb-2">Field Utilization</h3>
                    <p class="text-sm font-medium text-gray-500 mb-8">Performance metrics and GPS coverage analysis for
                        each active salesperson in the organization.</p>
                    <button
                        class="mt-auto w-full py-4 bg-emerald-600 hover:bg-emerald-700 text-white font-bold rounded-2xl transition-all shadow-lg shadow-emerald-600/20 active:scale-95">
                        Analyze Personnel
                    </button>
                </div>

                <!-- Inventory Trends Card -->
                <div
                    class="bg-white/95 backdrop-blur-md rounded-3xl p-8 shadow-around-lg border border-white/20 flex flex-col items-center text-center group transition-all hover:-translate-y-2">
                    <div
                        class="w-20 h-20 bg-purple-50 rounded-2xl flex items-center justify-center text-purple-600 mb-6 group-hover:scale-110 transition-transform">
                        <i data-lucide="package" class="w-10 h-10 text-purple-600"></i>
                    </div>
                    <h3 class="text-xl font-black text-gray-900 mb-2">Inventory Velocity</h3>
                    <p class="text-sm font-medium text-gray-500 mb-8">Real-time tracking of product demand trends and
                        stock movement patterns across regions.</p>
                    <button
                        class="mt-auto w-full py-4 bg-purple-600 hover:bg-purple-700 text-white font-bold rounded-2xl transition-all shadow-lg shadow-purple-600/20 active:scale-95">
                        View Analytics
                    </button>
                </div>
            </div>

            <!-- Development Notice -->
            <div
                class="mt-12 p-6 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20 flex items-center gap-6">
                <div class="p-4 bg-amber-500/20 rounded-2xl">
                    <i data-lucide="construction" class="w-8 h-8 text-amber-400"></i>
                </div>
                <div>
                    <h4 class="text-white font-black text-lg">Detailed Analytics Engine Under Development</h4>
                    <p class="text-indigo-100 text-sm">We are currently integrating deeper reporting features.
                        Predictive analysis and regional heatmaps will be available in the next release.</p>
                </div>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>