<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

            <!-- Alerts -->
            <% if (typeof success !=='undefined' && success) { %>
                <div
                    class="mb-8 p-4 bg-emerald-500/10 border-l-4 border-emerald-500 text-emerald-100 flex items-center justify-between gap-3 rounded-r-xl backdrop-blur-md">
                    <div class="flex items-center gap-3">
                        <i data-lucide="check-circle-2" class="w-5 h-5 text-emerald-500"></i>
                        <p class="font-bold">
                            <%= success %>
                        </p>
                    </div>
                    <button onclick="this.parentElement.remove()" class="text-emerald-500 hover:text-emerald-400">
                        <i data-lucide="x" class="w-4 h-4"></i>
                    </button>
                </div>
                <% } %>

                    <% if (typeof error !=='undefined' && error) { %>
                        <div
                            class="mb-8 p-4 bg-red-500/10 border-l-4 border-red-500 text-red-100 flex items-center justify-between gap-3 rounded-r-xl backdrop-blur-md">
                            <div class="flex items-center gap-3">
                                <i data-lucide="alert-triangle" class="w-5 h-5 text-red-500"></i>
                                <p class="font-bold">
                                    <%= error %>
                                </p>
                            </div>
                            <button onclick="this.parentElement.remove()" class="text-red-500 hover:text-red-400">
                                <i data-lucide="x" class="w-4 h-4"></i>
                            </button>
                        </div>
                        <% } %>

                            <form id="orderForm" action="/salesperson/orders/create" method="POST"
                                onsubmit="return collectProducts()" class="space-y-8">
                                <!-- Section: Customer Identification -->
                                <div
                                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg overflow-hidden border border-white/20">
                                    <div class="bg-indigo-600 px-8 py-5 flex items-center gap-3 text-white">
                                        <i data-lucide="user-check" class="w-6 h-6"></i>
                                        <h2 class="text-xl font-black tracking-tight uppercase tracking-widest">Customer
                                            Profile</h2>
                                    </div>
                                    <div class="p-8">
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                            <div class="space-y-2">
                                                <label
                                                    class="block text-xs font-black text-gray-500 uppercase tracking-widest">Customer
                                                    Name *</label>
                                                <div class="relative">
                                                    <input type="text" id="customerName" name="customerName" required
                                                        autocomplete="off"
                                                        value="<%= typeof prefill !== 'undefined' && prefill ? prefill.customerName : '' %>"
                                                        class="w-full px-5 py-3.5 border-2 border-transparent rounded-2xl transition-all outline-none font-bold placeholder-gray-300 <%= typeof prefill !== 'undefined' && prefill ? 'bg-indigo-50/50 border-indigo-100 text-indigo-900 pointer-events-none' : 'bg-gray-50 focus:bg-white focus:border-indigo-500 text-gray-900' %>"
                                                        <%=typeof prefill !=='undefined' && prefill ? 'readonly' : '' %>
                                                    placeholder="Search or type new name...">
                                                    <input type="hidden" id="customerId" name="customerId"
                                                        value="<%= typeof prefill !== 'undefined' && prefill ? prefill.customerId : '' %>">
                                                    <div class="absolute left-0 right-0 top-full mt-2 bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden z-50 hidden"
                                                        id="customerSuggestions"></div>
                                                </div>
                                                <p class="text-[10px] font-bold text-gray-400 italic">Auto-creation
                                                    enabled for new identities.</p>
                                            </div>

                                            <div class="space-y-2">
                                                <label
                                                    class="block text-xs font-black text-gray-500 uppercase tracking-widest">Mobile
                                                    Number</label>
                                                <input type="text" id="mobileNo" name="mobileNo"
                                                    value="<%= typeof prefill !== 'undefined' && prefill ? prefill.mobileNo : '' %>"
                                                    class="w-full px-5 py-3.5 border-2 border-transparent rounded-2xl transition-all outline-none font-bold <%= typeof prefill !== 'undefined' && prefill ? 'bg-indigo-50/50 border-indigo-100 text-indigo-900' : 'bg-gray-50 focus:bg-white focus:border-indigo-500 text-gray-900' %>"
                                                    <%=typeof prefill !=='undefined' && prefill ? 'readonly' : '' %>
                                                placeholder="+91 00000 00000">
                                            </div>

                                            <div class="md:col-span-2 space-y-2">
                                                <label
                                                    class="block text-xs font-black text-gray-500 uppercase tracking-widest">Physical
                                                    Address</label>
                                                <textarea id="address" name="address" rows="1"
                                                    class="w-full px-5 py-3.5 border-2 border-transparent rounded-2xl transition-all outline-none font-bold <%= typeof prefill !== 'undefined' && prefill ? 'bg-indigo-50/50 border-indigo-100 text-indigo-900' : 'bg-gray-50 focus:bg-white focus:border-indigo-500 text-gray-900' %>"
                                                    <%=typeof prefill !=='undefined' && prefill ? 'readonly' : '' %>
                                                    placeholder="Street, Landmark, City..."><%= typeof prefill !== 'undefined' && prefill ? prefill.address : '' %></textarea>
                                            </div>

                                            <div class="space-y-2">
                                                <label
                                                    class="block text-xs font-black text-gray-500 uppercase tracking-widest">Tax
                                                    Identification (GST)</label>
                                                <input type="text" id="gstNo" name="gstNo"
                                                    value="<%= typeof prefill !== 'undefined' && prefill ? prefill.gstNo : '' %>"
                                                    class="w-full px-5 py-3.5 border-2 border-transparent rounded-2xl transition-all outline-none font-bold <%= typeof prefill !== 'undefined' && prefill ? 'bg-indigo-50/50 border-indigo-100 text-indigo-900' : 'bg-gray-50 focus:bg-white focus:border-indigo-500 text-gray-900' %>"
                                                    <%=typeof prefill !=='undefined' && prefill ? 'readonly' : '' %>
                                                placeholder="22AAAAA0000A1Z5">
                                            </div>

                                            <div class="space-y-2">
                                                <label
                                                    class="block text-xs font-black text-gray-500 uppercase tracking-widest">Niche
                                                    Category</label>
                                                <select id="category" name="category" <%=typeof prefill !=='undefined'
                                                    && prefill ? 'disabled' : '' %>
                                                    class="w-full px-5 py-3.5 border-2 border-transparent rounded-2xl
                                                    transition-all outline-none font-bold appearance-none
                                                    bg-[url('data:image/svg+xml;charset=UTF-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2024%2024%22%20fill%3D%22none%22%20stroke%3D%22currentColor%22%20stroke-width%3D%222%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%3E%3Cpolyline%20points%3D%226%209%2012%2015%2018%209%22%3E%3C%2Fpolyline%3E%3C%2Fsvg%3E')]
                                                    bg-[length:1.25em] bg-[right_1rem_center] bg-no-repeat <%= typeof
                                                        prefill !=='undefined' && prefill
                                                        ? 'bg-indigo-50/50 border-indigo-100 text-indigo-900'
                                                        : 'bg-gray-50 focus:bg-white focus:border-indigo-500 text-gray-900'
                                                        %>">
                                                        <option value="" <%=typeof prefill !=='undefined' && prefill &&
                                                            prefill.category==='' ? 'selected' : '' %>>Standard / Other
                                                        </option>
                                                        <option value="Hotel" <%=typeof prefill !=='undefined' &&
                                                            prefill && prefill.category==='Hotel' ? 'selected' : '' %>
                                                            >Hotel /
                                                            Hospitality</option>
                                                        <option value="Gym" <%=typeof prefill !=='undefined' && prefill
                                                            && prefill.category==='Gym' ? 'selected' : '' %>>Gym /
                                                            Fitness
                                                        </option>
                                                        <option value="Resort" <%=typeof prefill !=='undefined' &&
                                                            prefill && prefill.category==='Resort' ? 'selected' : '' %>
                                                            >Resort /
                                                            Tourism</option>
                                                        <option value="Water Park" <%=typeof prefill !=='undefined' &&
                                                            prefill && prefill.category==='Water Park' ? 'selected' : ''
                                                            %>
                                                            >Water Park / Leisure</option>
                                                </select>
                                                <% if (typeof prefill !=='undefined' && prefill) { %>
                                                    <input type="hidden" name="category"
                                                        value="<%= prefill.category %>">
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Section: Transaction Specifics -->
                                <div
                                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg overflow-hidden border border-white/20">
                                    <div class="bg-purple-600 px-8 py-5 flex items-center gap-3 text-white">
                                        <i data-lucide="shopping-bag" class="w-6 h-6"></i>
                                        <h2 class="text-xl font-black tracking-tight uppercase tracking-widest">
                                            Order Details</h2>
                                    </div>
                                    <div class="p-8">
                                        <div class="mb-8 p-6 bg-purple-50 rounded-2xl border-l-4 border-purple-500">
                                            <label
                                                class="block text-xs font-black text-purple-600 uppercase tracking-widest mb-3">
                                                Order Status *</label>
                                            <select id="orderStatus" name="orderStatus" required
                                                class="w-full max-w-sm px-5 py-3.5 bg-white border-2 border-transparent rounded-2xl focus:border-purple-500 transition-all outline-none font-black text-gray-900 shadow-sm">
                                                <option value="">Select current state...</option>
                                                <option value="Ordered">✅ Confirmed Order</option>
                                                <option value="Not Ordered">⏳ Follow-up Required</option>
                                            </select>
                                        </div>

                                        <!-- Products Section -->
                                        <div id="productsSection" style="display: none;"
                                            class="space-y-6 animate-in slide-in-from-top-4 duration-500">

                                            <div id="productsContainer" class="space-y-6">
                                                <!-- First Product Row -->
                                                <div class="group relative bg-gray-50/50 p-6 rounded-3xl border-2 border-dashed border-gray-200"
                                                    id="productRow_1">
                                                    <div class="grid grid-cols-1 md:grid-cols-12 gap-6 items-end">
                                                        <div class="md:col-span-7 space-y-2">
                                                            <label
                                                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest">Catalog
                                                                Search</label>
                                                            <div class="relative">
                                                                <input type="text" id="productName_1"
                                                                    placeholder="Search product line..."
                                                                    autocomplete="off"
                                                                    class="w-full px-5 py-3 bg-white border-2 border-transparent rounded-2xl focus:border-purple-500 transition-all outline-none font-bold text-gray-900 shadow-sm">
                                                                <input type="hidden" id="productId_1">
                                                                <div class="absolute left-0 right-0 top-full mt-2 bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden z-50 hidden"
                                                                    id="productSuggestions_1"></div>
                                                            </div>
                                                        </div>
                                                        <div class="md:col-span-3 space-y-2">
                                                            <label
                                                                class="block text-[10px] font-black text-gray-400 uppercase tracking-widest">Quantity</label>
                                                            <input type="number" id="quantity_1" min="1" value="1"
                                                                class="w-full px-5 py-3 bg-white border-2 border-transparent rounded-2xl focus:border-purple-500 transition-all outline-none font-black text-gray-900 shadow-sm text-center">
                                                        </div>
                                                        <div class="md:col-span-2">
                                                            <button type="button" disabled
                                                                class="w-full p-3.5 text-gray-300 bg-transparent rounded-2xl border-2 border-transparent cursor-not-allowed">
                                                                <i data-lucide="trash-2" class="w-5 h-5"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <button type="button" onclick="addProductRow()"
                                                class="w-full py-4 border-2 border-dashed border-indigo-200 text-indigo-600 font-black rounded-3xl hover:bg-indigo-50 hover:border-indigo-300 transition-all flex items-center justify-center gap-3 active:scale-95">
                                                <i data-lucide="plus-circle" class="w-5 h-5"></i>
                                                Add Another Product
                                            </button>

                                            <input type="hidden" id="productsData" name="products">
                                        </div>

                                        <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-8">
                                            <div class="space-y-1">
                                                <label
                                                    class="block text-xs font-black text-gray-500 uppercase tracking-widest text-left">Executive
                                                    Notes / Remarks</label>
                                                <textarea id="remark" name="remark" rows="2"
                                                    class="w-full px-5 py-3.5 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 transition-all outline-none font-bold text-gray-900"
                                                    placeholder="Add any specific branding requests or client preferences..."></textarea>
                                            </div>
                                            <div class="space-y-1">
                                                <label
                                                    class="block text-xs font-black text-gray-500 uppercase tracking-widest text-left">Tentative
                                                    Repeat Date</label>
                                                <input type="date" id="tentativeRepeatDate" name="tentativeRepeatDate"
                                                    class="w-full px-5 py-3.5 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-indigo-500 transition-all outline-none font-bold text-gray-900 appearance-none">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Section: Geospatial Validation -->
                                <div
                                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg overflow-hidden border border-white/20">
                                    <div class="bg-emerald-600 px-8 py-5 flex items-center gap-3 text-white">
                                        <i data-lucide="map-pin" class="w-6 h-6"></i>
                                        <h2 class="text-xl font-black tracking-tight uppercase tracking-widest">GPS
                                            Validation</h2>
                                    </div>
                                    <div class="p-8">
                                        <div class="flex flex-col md:flex-row items-center gap-8">
                                            <div class="flex-grow">
                                                <p class="text-gray-600 font-medium leading-relaxed">System-mandated
                                                    geospatial capture. You must be physically present at the client's
                                                    location to authenticate this transaction.</p>
                                                <ul class="mt-4 space-y-2">
                                                    <li class="flex items-center gap-2 text-xs font-bold text-gray-400">
                                                        <i data-lucide="shield-check"
                                                            class="w-3 h-3 text-emerald-500"></i>
                                                        Precise coordinates required
                                                    </li>
                                                    <li class="flex items-center gap-2 text-xs font-bold text-gray-400">
                                                        <i data-lucide="shield-check"
                                                            class="w-3 h-3 text-emerald-500"></i>
                                                        Real-time accuracy validation
                                                    </li>
                                                </ul>
                                            </div>

                                            <div class="w-full md:w-auto">
                                                <button type="button" id="gpsBtn" onclick="captureGPS()"
                                                    class="w-full md:w-auto px-10 py-5 bg-emerald-600 hover:bg-emerald-700 text-white font-black rounded-2xl shadow-xl shadow-emerald-500/30 transition-all transform active:scale-95 flex items-center justify-center gap-3">
                                                    <i data-lucide="map-pin" class="w-6 h-6"></i>
                                                    Capture Live GPS
                                                </button>
                                            </div>
                                        </div>

                                        <div id="gpsInfo" class="hidden mt-8">
                                            <div id="gpsStatus"
                                                class="p-6 bg-emerald-50 border-2 border-emerald-100 rounded-3xl text-emerald-800 font-black text-center animate-in zoom-in duration-300">
                                            </div>
                                        </div>

                                        <input type="hidden" id="latitude" name="latitude">
                                        <input type="hidden" id="longitude" name="longitude">
                                        <input type="hidden" id="accuracy" name="accuracy">
                                    </div>
                                </div>

                                <!-- Section: Submission Alignment -->
                                <div
                                    class="pt-8 border-t border-white/20 flex flex-col sm:flex-row justify-between items-center gap-6">
                                    <button type="submit" id="submitBtn" disabled
                                        class="w-full sm:w-auto px-16 py-6 bg-white disabled:bg-white/20 disabled:text-white/40 disabled:cursor-not-allowed hover:bg-indigo-50 text-indigo-700 font-black text-xl rounded-3xl shadow-around-lg transition-all transform hover:scale-105 active:scale-95 flex items-center justify-center gap-3">
                                        <i data-lucide="send" class="w-6 h-6"></i>
                                        Submit
                                    </button>
                                </div>
                            </form>
        </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>

                <script src="/js/autocomplete.js"></script>
                <script src="/js/gps.js"></script>