<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
            <div class="mb-12">
                <h1 class="text-4xl font-extrabold text-white flex items-center gap-4 tracking-tight drop-shadow-md">
                    <i class="bi bi-journal-text text-indigo-400"></i>
                    Order History
                </h1>
                <p class="mt-2 text-indigo-100 font-medium">Detailed log of all your submitted and pending sales orders.
                </p>
            </div>

            <% if (orders.length===0) { %>
                <div
                    class="bg-white/10 backdrop-blur-sm rounded-3xl p-20 text-center border-2 border-dashed border-white/20">
                    <i class="bi bi-inbox text-6xl text-white/20 mb-4 block"></i>
                    <p class="text-indigo-100 text-xl font-bold">No order records found.</p>
                </div>
                <% } else { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        <% orders.forEach(function(order) { %>
                            <div
                                class="bg-white/95 backdrop-blur-md rounded-3xl shadow-xl overflow-hidden border border-white/20 transition-all hover:shadow-2xl hover:-translate-y-1 flex flex-col h-full group">
                                <!-- Order Header -->
                                <div class="p-6 border-b border-gray-100 bg-gray-50/50">
                                    <div class="flex justify-between items-start mb-4">
                                        <span
                                            class="px-3 py-1 bg-white border border-gray-200 text-gray-500 font-black text-[10px] uppercase tracking-widest rounded-lg tabular-nums shadow-sm">
                                            <%= new Date(order.createdAt).toLocaleDateString('en-IN', { day: '2-digit' ,
                                                month: 'short' , year: 'numeric' }) %>
                                        </span>
                                        <div class="flex gap-2">
                                            <% if (order.approvalStatus==='pending' ) { %>
                                                <div
                                                    class="w-3 h-3 bg-amber-400 rounded-full animate-pulse shadow-lg shadow-amber-400/50">
                                                </div>
                                                <% } else if (order.approvalStatus==='approved' ) { %>
                                                    <i class="bi bi-check-circle-fill text-emerald-500 text-lg"></i>
                                                    <% } else { %>
                                                        <i class="bi bi-x-circle-fill text-red-500 text-lg"></i>
                                                        <% } %>
                                        </div>
                                    </div>
                                    <h3
                                        class="text-xl font-black text-gray-900 leading-tight group-hover:text-indigo-600 transition-colors">
                                        <%= order.customerName %>
                                    </h3>
                                    <p class="text-xs font-bold text-gray-400 uppercase tracking-widest mt-1">
                                        <%= order.category || 'Standard Category' %>
                                    </p>
                                </div>

                                <!-- Order Details -->
                                <div class="p-6 space-y-4">
                                    <div class="flex justify-between items-center text-sm">
                                        <span
                                            class="font-bold text-gray-500 uppercase tracking-widest text-[10px]">Products
                                            Included</span>
                                        <span
                                            class="font-black text-gray-900 bg-indigo-50 px-3 py-1 rounded-lg text-xs">
                                            <%= order.products ? order.products.length : 0 %> Item(s)
                                        </span>
                                    </div>

                                    <div class="flex justify-between items-center text-sm">
                                        <span
                                            class="font-bold text-gray-500 uppercase tracking-widest text-[10px]">Fulfillment
                                            Status</span>
                                        <span
                                            class="<%= order.orderStatus === 'Ordered' ? 'text-emerald-600' : 'text-gray-400' %> font-black uppercase tracking-widest text-[10px]">
                                            <%= order.orderStatus %>
                                        </span>
                                    </div>

                                    <div class="flex justify-between items-center text-sm pt-4 border-t border-gray-50">
                                        <span
                                            class="font-bold text-gray-500 uppercase tracking-widest text-[10px]">Internal
                                            Status</span>
                                        <span class="px-4 py-1 rounded-full text-[10px] font-black uppercase tracking-widest shadow-sm
                                <%= order.approvalStatus === 'pending' ? 'bg-amber-100 text-amber-700' : 
                                   order.approvalStatus === 'approved' ? 'bg-emerald-100 text-emerald-700' : 
                                   'bg-red-100 text-red-700' %>">
                                            <%= order.approvalStatus %>
                                        </span>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div
                                    class="mt-auto p-4 bg-gray-50/80 flex items-center justify-between border-t border-gray-100">
                                    <a href="https://www.google.com/maps?q=<%= order.gpsLocation.latitude %>,<%= order.gpsLocation.longitude %>"
                                        target="_blank"
                                        class="flex items-center gap-2 text-indigo-600 hover:text-indigo-800 font-black text-xs uppercase tracking-widest transition-all px-4 py-2 hover:bg-indigo-50 rounded-xl">
                                        <i class="bi bi-geo-alt-fill"></i>
                                        Location
                                    </a>
                                    <div class="text-[10px] font-bold text-gray-400 italic">
                                        ID: ...<%= order._id.toString().slice(-6).toUpperCase() %>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>