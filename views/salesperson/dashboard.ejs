<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">




            <!-- Recent Orders Section -->
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-black mb-6 flex items-center gap-3">
                    <i data-lucide="zap" class="w-6 h-6 text-amber-400"></i>
                    Recent Activity
                </h2>

                <% if (orders.length===0) { %>
                    <div
                        class="bg-white/10 backdrop-blur-sm rounded-3xl p-12 text-center border-2 border-dashed border-white/20">
                        <i data-lucide="notebook" class="w-12 h-12 text-white/30 mb-4 block mx-auto"></i>
                        <p class="text-indigo-100 text-lg font-medium">No orders yet. Start your first transaction!</p>
                        <a href="/salesperson/create-order"
                            class="mt-6 inline-flex items-center gap-3 py-4 px-8 bg-white text-indigo-600 font-black rounded-2xl shadow-xl transition-all hover:scale-105 active:scale-95">
                            <i data-lucide="plus-circle" class="w-5 h-5"></i>
                            Create New Order
                        </a>
                    </div>
                    <% } else { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <% orders.forEach(function(order) { %>
                                <div
                                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-around-lg overflow-hidden border border-white/20 flex flex-col h-full group transition-all hover:shadow-indigo-500/10">
                                    <div class="p-6">
                                        <div class="flex justify-end items-start mb-4">
                                            <div class="text-right">
                                                <div
                                                    class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-1">
                                                    Created On</div>
                                                <div class="text-sm font-bold text-gray-900 tabular-nums">
                                                    <%= new Date(order.createdAt).toLocaleDateString('en-IN', {
                                                        day: '2-digit' , month: 'short' }) %>
                                                </div>
                                            </div>
                                        </div>

                                        <h4 class="text-lg font-black text-gray-900 mb-1 leading-tight">
                                            <%= order.customerName %>
                                        </h4>
                                        <p class="text-xs font-bold text-indigo-500 uppercase tracking-widest mb-3">
                                            <%= order.category || 'Standard Category' %>
                                        </p>

                                        <!-- Product List -->
                                        <% if (order.products && order.products.length> 0) { %>
                                            <div class="space-y-1.5 mb-4">
                                                <% order.products.forEach(function(product) { %>
                                                    <div
                                                        class="flex items-center justify-between text-xs bg-gray-50 px-3 py-2 rounded-lg">
                                                        <span class="font-bold text-gray-700 truncate flex-1 mr-2">
                                                            <%= product.productName %>
                                                        </span>
                                                        <span class="font-black text-indigo-600 whitespace-nowrap">
                                                            Qty: <%= product.quantity %>
                                                        </span>
                                                    </div>
                                                    <% }); %>
                                            </div>
                                            <% } %>

                                                <% if (order.tentativeRepeatDate) { %>
                                                    <div class="flex items-center gap-2 mb-6">
                                                        <i data-lucide="calendar" class="w-3 h-3 text-amber-500"></i>
                                                        <span
                                                            class="text-[10px] font-black text-gray-500 uppercase tracking-widest">
                                                            Repeat: <%= new
                                                                Date(order.tentativeRepeatDate).toLocaleDateString('en-IN',
                                                                { day: '2-digit' , month: 'short' , year: 'numeric' })
                                                                %>
                                                        </span>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="mb-6"></div>
                                                        <% } %>

                                                            <div class="flex flex-wrap gap-2 mt-auto">
                                                                <% if (order.approvalStatus==='pending' ) { %>
                                                                    <span
                                                                        class="px-3 py-1 bg-amber-100 text-amber-700 text-[10px] font-black uppercase tracking-widest rounded-lg">Pending</span>
                                                                    <% } else if (order.approvalStatus==='approved' ) {
                                                                        %>
                                                                        <span
                                                                            class="px-3 py-1 bg-emerald-50 text-emerald-600 text-[10px] font-black uppercase tracking-widest border border-emerald-200 rounded-lg">Approved</span>
                                                                        <% } else { %>
                                                                            <span
                                                                                class="px-3 py-1 bg-red-100 text-red-700 text-[10px] font-black uppercase tracking-widest rounded-lg">Rejected</span>
                                                                            <% } %>
                                                            </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>

                        <div class="mt-8 text-center">
                            <a href="/salesperson/orders"
                                class="text-indigo-100 hover:text-white font-bold underline underline-offset-8 transition-all">
                                View Complete Order history <i data-lucide="chevron-right"
                                    class="w-4 h-4 ml-1 inline-block"></i>
                            </a>
                        </div>
                        <% } %>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>