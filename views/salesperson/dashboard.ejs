<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
            <div class="mb-12">
                <h1 class="text-4xl font-extrabold text-white flex items-center gap-4 tracking-tight drop-shadow-md">
                    <i class="bi bi-person-badge text-indigo-400"></i>
                    Sales Executive Dashboard
                </h1>
                <p class="mt-3 text-lg text-indigo-100 font-medium">Welcome back, <span class="text-white font-bold">
                        <%= user.name %>
                    </span>! Monitor your order flow and performance.</p>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
                <div
                    class="bg-indigo-600/80 backdrop-blur-md rounded-3xl p-8 shadow-xl border border-indigo-400/30 group transition-all hover:-translate-y-1">
                    <div class="flex items-center gap-6">
                        <div class="p-5 bg-white/10 rounded-2xl group-hover:bg-white/20 transition-colors">
                            <i class="bi bi-cart-check-fill text-5xl text-white"></i>
                        </div>
                        <div>
                            <h3 class="text-5xl font-black text-white mb-1 tracking-tight">
                                <%= stats.totalOrders %>
                            </h3>
                            <p class="text-indigo-100 font-bold uppercase tracking-widest text-xs">Lifetime Orders</p>
                        </div>
                    </div>
                </div>

                <div
                    class="bg-amber-500/80 backdrop-blur-md rounded-3xl p-8 shadow-xl border border-amber-400/30 group transition-all hover:-translate-y-1">
                    <div class="flex items-center gap-6">
                        <div class="p-5 bg-white/10 rounded-2xl group-hover:bg-white/20 transition-colors">
                            <i class="bi bi-clock-history text-5xl text-white"></i>
                        </div>
                        <div>
                            <h3 class="text-5xl font-black text-white mb-1 tracking-tight">
                                <%= stats.pendingOrders %>
                            </h3>
                            <p class="text-amber-50 font-bold uppercase tracking-widest text-xs">Pending Approval</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders Section -->
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
                    <i class="bi bi-lightning-charge-fill text-amber-400"></i>
                    Recent Activity
                </h2>

                <% if (orders.length===0) { %>
                    <div
                        class="bg-white/10 backdrop-blur-sm rounded-3xl p-12 text-center border-2 border-dashed border-white/20">
                        <i class="bi bi-journal-x text-6xl text-white/30 mb-4 block"></i>
                        <p class="text-indigo-100 text-lg font-medium">No orders yet. Start your first transaction!</p>
                        <a href="/salesperson/create-order"
                            class="mt-6 inline-flex items-center gap-3 py-4 px-8 bg-white text-indigo-600 font-black rounded-2xl shadow-xl transition-all hover:scale-105 active:scale-95">
                            <i class="bi bi-plus-circle"></i>
                            Create New Order
                        </a>
                    </div>
                    <% } else { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <% orders.forEach(function(order) { %>
                                <div
                                    class="bg-white/95 backdrop-blur-md rounded-3xl shadow-xl overflow-hidden border border-white/20 flex flex-col h-full group transition-all hover:shadow-indigo-500/10">
                                    <div class="p-6">
                                        <div class="flex justify-between items-start mb-4">
                                            <div
                                                class="w-12 h-12 bg-indigo-50 rounded-2xl flex items-center justify-center text-indigo-600 font-black text-xl">
                                                <%= order.customerName.charAt(0) %>
                                            </div>
                                            <div class="text-right">
                                                <div
                                                    class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-1">
                                                    Created On</div>
                                                <div class="text-sm font-bold text-gray-900 tabular-nums">
                                                    <%= new Date(order.createdAt).toLocaleDateString('en-IN', {
                                                        day: '2-digit' , month: 'short' }) %>
                                                </div>
                                            </div>
                                        </div>

                                        <h4 class="text-lg font-black text-gray-900 mb-1 leading-tight">
                                            <%= order.customerName %>
                                        </h4>
                                        <p class="text-xs font-bold text-indigo-500 uppercase tracking-widest mb-6">
                                            <%= order.category || 'Standard Category' %>
                                        </p>

                                        <div class="flex flex-wrap gap-2 mt-auto">
                                            <% if (order.orderStatus==='Ordered' ) { %>
                                                <span
                                                    class="px-3 py-1 bg-emerald-100 text-emerald-700 text-[10px] font-black uppercase tracking-widest rounded-lg">Ordered</span>
                                                <% } else { %>
                                                    <span
                                                        class="px-3 py-1 bg-gray-100 text-gray-600 text-[10px] font-black uppercase tracking-widest rounded-lg">Draft</span>
                                                    <% } %>

                                                        <% if (order.approvalStatus==='pending' ) { %>
                                                            <span
                                                                class="px-3 py-1 bg-amber-100 text-amber-700 text-[10px] font-black uppercase tracking-widest rounded-lg">Pending</span>
                                                            <% } else if (order.approvalStatus==='approved' ) { %>
                                                                <span
                                                                    class="px-3 py-1 bg-emerald-50 text-emerald-600 text-[10px] font-black uppercase tracking-widest border border-emerald-200 rounded-lg">Approved</span>
                                                                <% } else { %>
                                                                    <span
                                                                        class="px-3 py-1 bg-red-100 text-red-700 text-[10px] font-black uppercase tracking-widest rounded-lg">Rejected</span>
                                                                    <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>

                        <div class="mt-8 text-center">
                            <a href="/salesperson/orders"
                                class="text-indigo-100 hover:text-white font-bold underline underline-offset-8 transition-all">
                                View Complete Order history <i class="bi bi-chevron-right ml-1"></i>
                            </a>
                        </div>
                        <% } %>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>