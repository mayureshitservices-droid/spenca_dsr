<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">




            <!-- Recent Orders Section -->
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-black mb-6 flex items-center gap-3">
                    <i data-lucide="layout-dashboard" class="w-6 h-6 text-black"></i>
                    Overview
                </h2>

                <!-- Stats Sections -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
                    <!-- Today's Stats -->
                    <div class="glass-card p-6 transition-all hover:shadow-2xl">
                        <div class="flex items-center gap-4 mb-6">
                            <div>
                                <h4 class="text-lg font-black text-gray-900 leading-tight">Today</h4>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-3">
                            <div class="p-3 bg-gray-50 rounded-2xl border border-gray-100">
                                <span
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1">Total
                                    Visits</span>
                                <span class="text-2xl font-black text-black">
                                    <%= stats.today.totalVisits %>
                                </span>
                            </div>
                            <div class="p-3 bg-primary-50 rounded-2xl border border-primary-100">
                                <span
                                    class="block text-[10px] font-black text-primary-600 uppercase tracking-widest mb-1">Orders</span>
                                <span class="text-2xl font-black text-primary-700">
                                    <%= stats.today.ordersCount %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- This Month's Stats -->
                    <div class="glass-card p-6 transition-all hover:shadow-2xl">
                        <div class="flex items-center gap-4 mb-6">
                            <div>
                                <h4 class="text-lg font-black text-gray-900 leading-tight">This Month</h4>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-3">
                            <div class="p-3 bg-gray-50 rounded-2xl border border-gray-100">
                                <span
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1">Total
                                    Visits</span>
                                <span class="text-2xl font-black text-black">
                                    <%= stats.month.totalVisits %>
                                </span>
                            </div>
                            <div class="p-3 bg-primary-50 rounded-2xl border border-primary-100">
                                <span
                                    class="block text-[10px] font-black text-primary-600 uppercase tracking-widest mb-1">Orders</span>
                                <span class="text-2xl font-black text-primary-700">
                                    <%= stats.month.ordersCount %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Last Month's Stats -->
                    <div class="glass-card p-6 transition-all hover:shadow-2xl">
                        <div class="flex items-center gap-4 mb-6">
                            <div>
                                <h4 class="text-lg font-black text-gray-900 leading-tight">Previous Month</h4>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-3">
                            <div class="p-3 bg-gray-50 rounded-2xl border border-gray-100">
                                <span
                                    class="block text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1">Total
                                    Visits</span>
                                <span class="text-2xl font-black text-black">
                                    <%= stats.lastMonth.totalVisits %>
                                </span>
                            </div>
                            <div class="p-3 bg-primary-50 rounded-2xl border border-primary-100">
                                <span
                                    class="block text-[10px] font-black text-primary-600 uppercase tracking-widest mb-1">Orders</span>
                                <span class="text-2xl font-black text-primary-700">
                                    <%= stats.lastMonth.ordersCount %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="recent-activity" class="scroll-mt-24"></div>
                <h2 class="text-2xl font-bold text-black mb-6 flex items-center gap-3">
                    <i data-lucide="history" class="w-6 h-6 text-indigo-500"></i>
                    Recent Activity
                </h2>

                <% if (orders.length===0) { %>
                    <div class="glass-card p-12 text-center border border-dashed border-gray-300">
                        <i data-lucide="notebook" class="w-12 h-12 text-gray-300 mb-4 block mx-auto"></i>
                        <p class="text-gray-500 text-lg font-medium">No orders yet. Start your first transaction!</p>
                        <a href="/salesperson/create-order" class="mt-6 btn-primary inline-flex">
                            <i data-lucide="plus-circle" class="w-5 h-5"></i>
                            Create New Order
                        </a>
                    </div>
                    <% } else { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <% orders.forEach(function(order) { %>
                                <div
                                    class="glass-card overflow-hidden flex flex-col h-full group transition-all hover:shadow-primary-400/20">
                                    <div class="p-6">
                                        <div class="flex justify-end items-start mb-4">
                                            <div class="text-right">
                                                <div
                                                    class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-1">
                                                    Created On</div>
                                                <div class="text-sm font-bold text-gray-900 tabular-nums">
                                                    <%= new Date(order.createdAt).toLocaleDateString('en-IN', {
                                                        day: '2-digit' , month: 'short' }) %>
                                                </div>
                                            </div>
                                        </div>

                                        <h4 class="text-lg font-black text-black mb-1 leading-tight">
                                            <%= order.customerName %>
                                        </h4>
                                        <p
                                            class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-3 flex items-center gap-1">
                                            <i data-lucide="phone" class="w-3 h-3"></i>
                                            <%= order.mobileNo %>
                                        </p>

                                        <!-- Product List -->
                                        <% if (order.products && order.products.length> 0) { %>
                                            <div class="space-y-1.5 mb-4">
                                                <% order.products.forEach(function(product) { %>
                                                    <div
                                                        class="flex items-center justify-between text-xs bg-gray-50 px-3 py-2 rounded-lg">
                                                        <span class="font-bold text-gray-700 truncate flex-1 mr-2">
                                                            <%= product.productName %>
                                                        </span>
                                                        <span class="font-black text-primary-600 whitespace-nowrap">
                                                            Qty: <%= product.quantity %>
                                                                <% if (product.rate) { %>
                                                                    <span class="ml-2 text-emerald-600">@ Rs. <%=
                                                                            product.rate %></span>
                                                                    <% } %>
                                                        </span>
                                                    </div>
                                                    <% }); %>
                                            </div>
                                            <% } %>

                                                <% if (order.tentativeRepeatDate) { %>
                                                    <div class="flex items-center gap-2 mb-6">
                                                        <i data-lucide="calendar" class="w-3 h-3 text-amber-500"></i>
                                                        <span
                                                            class="text-[10px] font-black text-gray-500 uppercase tracking-widest">
                                                            Repeat: <%= new
                                                                Date(order.tentativeRepeatDate).toLocaleDateString('en-IN',
                                                                { day: '2-digit' , month: 'short' , year: 'numeric' })
                                                                %>
                                                        </span>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="mb-6"></div>
                                                        <% } %>


                                    </div>
                                </div>
                                <% }); %>
                        </div>

                        <div class="mt-8 text-center">
                            <a href="/salesperson/orders"
                                class="text-black hover:text-primary-600 font-bold underline underline-offset-8 transition-all">
                                View Complete Order history <i data-lucide="chevron-right"
                                    class="w-4 h-4 ml-1 inline-block"></i>
                            </a>
                        </div>
                        <% } %>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>