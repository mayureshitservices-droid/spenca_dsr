<%- include('../partials/header') %>
    <%- include('../partials/navbar', { user, userRole }) %>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

            <!-- Device List View -->
            <div id="deviceList">
                <h2 class="text-2xl font-bold text-black mb-6 flex items-center gap-3">
                    <i data-lucide="smartphone" class="w-6 h-6 text-black"></i>
                    TeleCRM Devices
                </h2>

                <% if (devices.length===0) { %>
                    <div class="glass-card p-12 text-center border border-dashed border-gray-300">
                        <i data-lucide="smartphone" class="w-12 h-12 text-gray-300 mb-4 block mx-auto"></i>
                        <p class="text-gray-500 text-lg font-medium">No devices connected yet.</p>
                    </div>
                    <% } else { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <% devices.forEach(function(device) { %>
                                <div onclick="showDeviceDetails('<%= device.id %>')"
                                    class="glass-card p-5 group transition-all hover:shadow-2xl cursor-pointer hover:-translate-y-1">
                                    <div class="flex items-center justify-between mb-4">
                                        <div class="flex items-center gap-2">
                                            <div
                                                class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 font-black text-lg">
                                                <i data-lucide="smartphone" class="w-5 h-5"></i>
                                            </div>
                                            <div>
                                                <h4 class="text-[8px] font-black text-gray-900 leading-tight">
                                                    <%= device.name %>
                                                </h4>
                                                <p class="text-[8px] font-bold text-gray-400 uppercase tracking-widest">
                                                    <%= device.id %>
                                                </p>
                                            </div>
                                        </div>
                                        <span
                                            class="px-2 py-0.5 rounded-full text-[9px] font-black uppercase tracking-widest <%= device.status === 'online' ? 'bg-emerald-100 text-emerald-700' : 'bg-gray-100 text-gray-500' %>">
                                            <%= device.status %>
                                        </span>
                                    </div>

                                    <!-- Inline Telecaller Edit -->
                                    <div class="mb-4 bg-gray-50 p-3 rounded-xl border border-gray-100"
                                        onclick="event.stopPropagation()">
                                        <div class="flex items-center justify-between gap-2">
                                            <div class="flex items-center gap-2 flex-1">
                                                <i data-lucide="user" class="w-4 h-4 text-gray-400"></i>
                                                <input type="text" id="cardTelecaller_<%= device.id %>"
                                                    value="<%= device.telecaller %>"
                                                    class="bg-transparent border-none p-0 text-sm font-bold text-gray-900 focus:ring-0 w-full"
                                                    onkeypress="if(event.key === 'Enter') saveCardTelecaller('<%= device.id %>')">
                                            </div>
                                            <button onclick="saveCardTelecaller('<%= device.id %>')"
                                                id="saveBtn_<%= device.id %>"
                                                class="p-1.5 bg-white hover:bg-primary-50 text-gray-400 hover:text-primary-600 rounded-lg shadow-sm border border-gray-100 transition-all opacity-0 group-hover:opacity-100 focus:opacity-100">
                                                <i data-lucide="save" class="w-4 h-4"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="space-y-2">
                                        <!-- For the Day -->
                                        <div>
                                            <div class="flex items-center gap-2 mb-1.5 text-[10px]">
                                                <i data-lucide="calendar" class="w-3.5 h-3.5 text-gray-400"></i>
                                                <span
                                                    class="text-[10px] font-black text-gray-400 capitalize tracking-widest leading-none">For
                                                    the day</span>
                                                <div class="flex-1 h-[0.5px] bg-gray-200"></div>
                                            </div>
                                            <div
                                                class="flex rounded-lg overflow-hidden border border-gray-200 shadow-md">
                                                <div
                                                    class="flex-1 bg-indigo-50 py-2 text-center border-b-[3px] border-indigo-200 border-r border-gray-300">
                                                    <p class="text-[11px] font-medium text-black leading-none mb-1">
                                                        Total</p>
                                                    <p
                                                        class="text-[11px] text-black leading-none font-mono tracking-tighter">
                                                        <%= device.callStats.today.total %>
                                                    </p>
                                                </div>
                                                <div
                                                    class="flex-1 bg-emerald-50 py-2 text-center border-b-[3px] border-emerald-200 border-r border-gray-300 last:border-r-0">
                                                    <p class="text-[11px] font-medium text-black leading-none mb-1">Ans
                                                    </p>
                                                    <p
                                                        class="text-[11px] text-black leading-none font-mono tracking-tighter">
                                                        <%= device.callStats.today.answered %>
                                                    </p>
                                                </div>
                                                <div
                                                    class="flex-1 bg-red-50 py-2 text-center border-b-[3px] border-red-200 border-r border-gray-300 last:border-r-0">
                                                    <p class="text-[11px] font-medium text-black leading-none mb-1">Miss
                                                    </p>
                                                    <p
                                                        class="text-[11px] text-black leading-none font-mono tracking-tighter">
                                                        <%= device.callStats.today.missed %>
                                                    </p>
                                                </div>
                                                <div
                                                    class="flex-1 bg-purple-50 py-2 text-center border-b-[3px] border-purple-200">
                                                    <p class="text-[11px] font-medium text-black leading-none mb-1">Dur
                                                    </p>
                                                    <p
                                                        class="text-[11px] text-black leading-none truncate px-0.5 font-mono tracking-tighter">
                                                        <%= device.callStats.today.duration %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- For the Month -->
                                        <div>
                                            <div class="flex items-center gap-2 mb-1.5">
                                                <i data-lucide="calendar-days" class="w-3.5 h-3.5 text-gray-400"></i>
                                                <span
                                                    class="text-[10px] font-black text-gray-400 capitalize tracking-widest leading-none">For
                                                    the month</span>
                                                <div class="flex-1 h-[0.5px] bg-gray-200"></div>
                                            </div>
                                            <div
                                                class="flex rounded-lg overflow-hidden border border-gray-200 shadow-md">
                                                <div
                                                    class="flex-1 bg-indigo-50 py-2 text-center border-b-[3px] border-indigo-200 border-r border-gray-300 last:border-r-0">
                                                    <p class="text-[11px] font-medium text-black leading-none mb-1">
                                                        Total</p>
                                                    <p
                                                        class="text-[11px] text-black leading-none font-mono tracking-tighter">
                                                        <%= device.callStats.month.total %>
                                                    </p>
                                                </div>
                                                <div
                                                    class="flex-1 bg-emerald-50 py-2 text-center border-b-[3px] border-emerald-200 border-r border-gray-300 last:border-r-0">
                                                    <p class="text-[11px] font-medium text-black leading-none mb-1">Ans
                                                    </p>
                                                    <p
                                                        class="text-[11px] text-black leading-none font-mono tracking-tighter">
                                                        <%= device.callStats.month.answered %>
                                                    </p>
                                                </div>
                                                <div
                                                    class="flex-1 bg-red-50 py-2 text-center border-b-[3px] border-red-200 border-r border-gray-300 last:border-r-0">
                                                    <p class="text-[11px] font-medium text-black leading-none mb-1">Miss
                                                    </p>
                                                    <p
                                                        class="text-[11px] text-black leading-none font-mono tracking-tighter">
                                                        <%= device.callStats.month.missed %>
                                                    </p>
                                                </div>
                                                <div
                                                    class="flex-1 bg-purple-50 py-2 text-center border-b-[3px] border-purple-200">
                                                    <p class="text-[11px] font-medium text-black leading-none mb-1">Dur
                                                    </p>
                                                    <p
                                                        class="text-[11px] text-black leading-none truncate px-0.5 font-mono tracking-tighter">
                                                        <%= device.callStats.month.duration %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div
                                        class="mt-3 flex items-center justify-between px-1 border-t border-gray-50 pt-3">
                                        <p class="text-[8px] font-bold text-gray-400 italic">Total All-Time: <%=
                                                device.callStats.totalCalls %>
                                        </p>
                                        <p class="text-[8px] font-bold text-gray-400 italic">ID: <%= device.id %>
                                        </p>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                        <% } %>
            </div>

            <!-- Device Detail View (Hidden Initially) -->
            <div id="deviceDetails" class="hidden">
                <div class="flex flex-col gap-6 mb-6">
                    <div class="flex flex-col md:flex-row md:items-center gap-6">
                        <div class="flex items-center gap-4 flex-grow">
                            <button onclick="hideDeviceDetails()"
                                class="w-fit p-3 bg-white hover:bg-gray-50 rounded-full shadow-lg border border-gray-100 transition-all active:scale-95 group">
                                <i data-lucide="arrow-left" class="w-6 h-6 text-black group-hover:text-primary-500"></i>
                            </button>
                            <h3 id="detailTitle" class="text-2xl font-black text-gray-900 leading-tight">Device Details
                            </h3>
                        </div>

                        <div
                            class="md:ml-auto flex flex-col sm:flex-row items-center gap-4 bg-primary-50 px-6 py-3 rounded-3xl border border-primary-100 shadow-sm w-full md:w-auto">
                            <div class="flex items-center gap-2">
                                <input type="date" id="rangeStartDate" onchange="applyFilters()"
                                    class="px-3 py-1.5 bg-white border border-primary-200 rounded-xl outline-none focus:ring-2 focus:ring-primary-400 font-bold text-base uppercase">
                                <span class="text-primary-300 font-black">/</span>
                                <input type="date" id="rangeEndDate" onchange="applyFilters()"
                                    class="px-3 py-1.5 bg-white border border-primary-200 rounded-xl outline-none focus:ring-2 focus:ring-primary-400 font-bold text-base uppercase">
                            </div>
                            <button onclick="exportToExcel()"
                                class="w-full sm:w-auto px-6 py-2 bg-primary-600 hover:bg-primary-700 text-white font-black uppercase tracking-widest text-[10px] rounded-xl shadow-lg shadow-primary-600/20 transition-all active:scale-95 flex items-center justify-center gap-2 whitespace-nowrap">
                                <i data-lucide="download-cloud" class="w-3 h-3"></i>
                                Download Logs
                            </button>
                        </div>
                    </div>

                    <!-- Search and Clear (Streamlined) -->
                    <div class="flex flex-col md:flex-row gap-4">
                        <div class="relative flex-1">
                            <input type="text" id="tableSearch"
                                placeholder="Search customer, phone, status, outcome, or notes..."
                                class="w-full px-4 py-3 bg-white border border-gray-200 rounded-2xl focus:ring-2 focus:ring-primary-400 focus:border-transparent outline-none transition-all shadow-around-sm text-base text-gray-900"
                                onkeyup="applyFilters()">
                        </div>
                        <button onclick="clearFilters()"
                            class="px-6 py-3 text-sm font-black text-gray-400 hover:text-red-500 bg-white rounded-2xl shadow-around-sm transition-all uppercase tracking-widest border border-gray-100">
                            Clear Filters
                        </button>
                    </div>

                    <div class="glass-card p-8 mt-6">
                        <div id="detailContent" class="space-y-6">
                            <!-- Content will be injected via JavaScript -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../partials/fab', { user, userRole }) %>
            <%- include('../partials/footer') %>

                <script>
                    // Data passed from server - passed as raw JSON to avoid quote-escaping issues
                    const devices = <% - JSON.stringify(devices) %>;

                    let currentDeviceId = null;
                    let currentPage = 1;
                    const itemsPerPage = 20;
                    let filteredHistory = [];

                    function showDeviceDetails(deviceId) {
                        currentDeviceId = deviceId;
                        const device = devices.find(d => d.id === deviceId);
                        if (!device) return;

                        const listView = document.getElementById('deviceList');
                        const detailView = document.getElementById('deviceDetails');
                        const detailTitle = document.getElementById('detailTitle');
                        const detailContent = document.getElementById('detailContent');

                        detailTitle.innerText = device.name;
                        currentPage = 1;
                        filteredHistory = [...device.history];

                        // Inject Table Structure and Pagination Placeholder
                        detailContent.innerHTML = `
                            <div class="overflow-x-auto -mx-8">
                                <table class="w-full text-left border-collapse min-w-[1300px]">
                                    <thead>
                                        <tr class="bg-gray-50 border-y border-gray-100">
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Time & Duration</th>
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Mobile Number</th>
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Call Status</th>
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Outcome</th>
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Reminder Date</th>
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Customer Name</th>
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Order Details</th>
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Distributor</th>
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Notes & Remarks</th>
                                            <th class="px-6 py-4 text-[10px] font-black text-gray-400 uppercase tracking-widest">Recording</th>
                                        </tr>
                                    </thead>
                                    <tbody id="callHistoryTableBody" class="divide-y divide-gray-50">
                                        <!-- Rows will be injected here -->
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination Controls -->
                            <div id="paginationControls" class="mt-6 flex items-center justify-between border-t border-gray-100 pt-6">
                                <p id="paginationInfo" class="text-[10px] font-bold text-gray-400 uppercase tracking-widest"></p>
                                <div class="flex items-center gap-2">
                                    <button onclick="changePage(currentPage - 1)" id="prevPageBtn" 
                                        class="p-2 bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-50 disabled:opacity-30 disabled:cursor-not-allowed transition-all">
                                        <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                    </button>
                                    <button onclick="changePage(currentPage + 1)" id="nextPageBtn" 
                                        class="p-2 bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-50 disabled:opacity-30 disabled:cursor-not-allowed transition-all">
                                        <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                    </button>
                                </div>
                            </div>
                        `;

                        listView.classList.add('hidden');
                        detailView.classList.remove('hidden');
                        window.scrollTo({ top: 0, behavior: 'smooth' });

                        // Initial render of the table
                        renderCallHistoryTable();

                        // Refresh icons
                        if (typeof lucide !== 'undefined') lucide.createIcons();
                    }

                    function renderCallHistoryTable() {
                        const tbody = document.getElementById('callHistoryTableBody');
                        if (!tbody) return;

                        const totalPages = Math.ceil(filteredHistory.length / itemsPerPage);
                        if (currentPage < 1) currentPage = 1;
                        if (currentPage > totalPages && totalPages > 0) currentPage = totalPages;

                        const start = (currentPage - 1) * itemsPerPage;
                        const end = start + itemsPerPage;
                        const pageData = filteredHistory.slice(start, end);

                        if (pageData.length === 0) {
                            tbody.innerHTML = `
                                <tr>
                                    <td colspan="9" class="px-6 py-12 text-center text-gray-400">
                                        <i data-lucide="phone-off" class="w-12 h-12 mx-auto mb-4 opacity-20"></i>
                                        <p class="text-sm font-medium">No call history found matching filters</p>
                                    </td>
                                </tr>
                            `;
                            document.getElementById('paginationControls').classList.add('hidden');
                        } else {
                            document.getElementById('paginationControls').classList.remove('hidden');
                            tbody.innerHTML = pageData.map(log => {
                                // Text Replacements with safety checks
                                const logCustomerName = log.customerName || 'New Customer';
                                const displayCustomerName = logCustomerName.toLowerCase() === 'new customer' ? '-' : logCustomerName;
                                const logDistributor = log.distributor || 'None';
                                const displayDistributor = (logDistributor && logDistributor.toLowerCase() === 'main branch') ? '-' : (logDistributor || '-');
                                const displayOutcome = (log.outcome === 'No Interaction' || !log.outcome) ? '-' : log.outcome;
                                const timestamp = log.timestamp ? new Date(log.timestamp) : new Date();
                                const displayDate = timestamp.toLocaleDateString('en-IN', { day: '2-digit', month: 'short' });
                                const displayTime = timestamp.toLocaleTimeString('en-IN', { hour: '2-digit', minute: '2-digit' });

                                return `
                                <tr class="hover:bg-gray-50/50 transition-colors">
                                    <td class="px-6 py-4">
                                        <div class="flex flex-col">
                                            <p class="text-[11px] text-gray-400 font-bold mb-0.5 uppercase tracking-tighter">${displayDate}</p>
                                            <p class="text-sm text-gray-900">${displayTime}</p>
                                            <p class="text-[10px] text-gray-500 font-mono tracking-tighter">${log.duration || 0}s</p>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-xs text-gray-600 font-bold font-mono">${log.phoneNumber || 'N/A'}</p>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="px-2 py-0.5 rounded-full text-[10px] font-black uppercase tracking-widest 
                                            ${log.callStatus === 'answered' || log.callStatus === 'outgoing' ? 'bg-emerald-100 text-emerald-700' :
                                        log.callStatus === 'missed' || log.callStatus === 'rejected' || log.callStatus === 'incoming' ? 'bg-red-100 text-red-700' : 'bg-gray-100 text-gray-500'}">
                                            ${log.callStatus || 'Unknown'}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-xs font-bold ${log.outcome === 'Ordered' ? 'text-emerald-600' : log.outcome === 'Visited' ? 'text-amber-600' : 'text-gray-400'}">
                                            ${displayOutcome}
                                        </p>
                                    </td>
                                    <td class="px-6 py-4">
                                        ${log.reminder ? `<p class="text-xs text-indigo-600 font-bold flex items-center gap-1">
                                            <i data-lucide="calendar" class="w-3 h-3"></i>
                                            ${new Date(log.reminder).toLocaleDateString('en-IN')}
                                        </p>` : '<p class="text-xs text-gray-400 italic">-</p>'}
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-sm font-bold text-gray-900">${displayCustomerName}</p>
                                    </td>
                                    <td class="px-6 py-4 max-w-[220px]">
                                        <p class="text-[10px] text-gray-600 leading-tight font-medium line-clamp-2 cursor-help" 
                                           title="${log.orderDetails !== 'N/A' && log.orderDetails ? log.orderDetails.replace(/"/g, '&quot;') : 'No order details'}">
                                            ${log.orderDetails !== 'N/A' && log.orderDetails ? log.orderDetails : '<span class="italic text-gray-400">-</span>'}
                                        </p>
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-xs ${displayDistributor !== '-' ? 'text-indigo-600 font-bold' : 'text-gray-400 italic'}">${displayDistributor}</p>
                                    </td>
                                    <td class="px-6 py-4 max-w-[200px]">
                                        <p class="text-[10px] text-gray-500 leading-tight italic line-clamp-2 cursor-help" 
                                           title="${log.remarks ? log.remarks.replace(/"/g, '&quot;') : 'No notes'}">
                                            ${log.remarks || '<span class="italic text-gray-400">-</span>'}
                                        </p>
                                    </td>
                                    <td class="px-6 py-4">
                                        ${log.recordingUrl ? `
                                            <a href="${log.recordingUrl}" target="_blank" 
                                               class="inline-flex items-center gap-1 px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full text-[10px] font-black uppercase tracking-wider hover:bg-indigo-100 transition-all active:scale-95" title="Listen">
                                                <i data-lucide="play-circle" class="w-3 h-3"></i>
                                                Listen
                                            </a>
                                        ` : `
                                            <span class="text-[10px] text-gray-300 font-bold uppercase tracking-widest">No Recording</span>
                                        `}
                                    </td>
                                </tr>
                                `;
                            }).join('');

                            // Update pagination controls
                            const paginationInfo = document.getElementById('paginationInfo');
                            const prevBtn = document.getElementById('prevPageBtn');
                            const nextBtn = document.getElementById('nextPageBtn');

                            paginationInfo.innerText = `Showing ${start + 1}-${Math.min(end, filteredHistory.length)} of ${filteredHistory.length}`;
                            prevBtn.disabled = currentPage === 1;
                            nextBtn.disabled = currentPage === totalPages;
                        }

                        if (typeof lucide !== 'undefined') lucide.createIcons();
                    }

                    function changePage(newPage) {
                        currentPage = newPage;
                        renderCallHistoryTable();

                        // Smooth scroll to top of table
                        const filterBar = document.getElementById('tableSearch').parentElement.parentElement;
                        filterBar.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }

                    function applyFilters() {
                        const search = document.getElementById('tableSearch').value.toLowerCase();
                        const startDate = document.getElementById('rangeStartDate').value;
                        const endDate = document.getElementById('rangeEndDate').value;

                        const device = devices.find(d => d.id === currentDeviceId);
                        if (!device) return;

                        filteredHistory = device.history.filter(log => {
                            const matchesSearch = !search ||
                                (log.customerName && log.customerName.toLowerCase().includes(search)) ||
                                (log.phoneNumber && log.phoneNumber.includes(search)) ||
                                (log.outcome && log.outcome.toLowerCase().includes(search)) ||
                                (log.callStatus && log.callStatus.toLowerCase().includes(search)) ||
                                (log.distributor && log.distributor.toLowerCase().includes(search)) ||
                                (log.remarks && log.remarks.toLowerCase().includes(search)) ||
                                (log.orderDetails && log.orderDetails.toLowerCase().includes(search));

                            let matchesDate = true;
                            if (startDate && endDate) {
                                const logDate = new Date(log.timestamp).toISOString().split('T')[0];
                                matchesDate = logDate >= startDate && logDate <= endDate;
                            }

                            return matchesSearch && matchesDate;
                        });

                        currentPage = 1; // Reset to page 1 on filter
                        renderCallHistoryTable();
                    }

                    function clearFilters() {
                        document.getElementById('tableSearch').value = '';
                        document.getElementById('rangeStartDate').value = '';
                        document.getElementById('rangeEndDate').value = '';
                        applyFilters();
                    }

                    function exportToExcel() {
                        if (!currentDeviceId) return;

                        const start = document.getElementById('rangeStartDate').value;
                        const end = document.getElementById('rangeEndDate').value;

                        if (!start || !end) {
                            alert('Action Required: Please select both start and end dates to generate the report.');
                            return;
                        }

                        window.location.href = `/headoffice/telecrm/export/${currentDeviceId}?startDate=${start}&endDate=${end}`;
                    }

                    function saveCardTelecaller(deviceId) {
                        const input = document.getElementById(`cardTelecaller_${deviceId}`);
                        const btn = document.getElementById(`saveBtn_${deviceId}`);
                        const newName = input.value.trim();

                        if (!newName) {
                            alert('Telecaller name cannot be empty');
                            return;
                        }

                        // Find device in local data
                        const device = devices.find(d => d.id === deviceId);
                        if (!device) return;

                        const originalName = device.telecaller;

                        // Local update
                        device.telecaller = newName;

                        // UI Feedback
                        const originalBtnHTML = btn.innerHTML;
                        btn.innerHTML = '<i data-lucide="check" class="w-4 h-4 text-emerald-500"></i>';
                        btn.classList.add('scale-110');
                        if (typeof lucide !== 'undefined') lucide.createIcons();

                        // Send update to server
                        fetch(`/api/telecrm/device/${deviceId}`, {
                            method: 'PATCH',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ telecaller: newName })
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    setTimeout(() => {
                                        btn.innerHTML = originalBtnHTML;
                                        btn.classList.remove('scale-110');
                                        if (typeof lucide !== 'undefined') lucide.createIcons();
